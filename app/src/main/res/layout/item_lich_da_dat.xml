<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    android:background="@drawable/background_item_recycle"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/linearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/textViewDiemDauLichDat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hà Nội"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginStart="8dp" />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ------ "
                android:textColor="@color/white"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/textViewDiemCuoiLichDat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vĩnh Phúc"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/textViewThoiGianXuatPhatLichDat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17-08-2023 5:00:00"
                android:textStyle="bold|italic"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:layout_marginStart="8sp"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textColor="@color/white"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/textViewThoiGianToiNoiLichDat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17-08-2023 10:00:00"
                android:textStyle="bold|italic"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhà Xe: "
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textViewTenXeLichDat"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sao Mai"
                android:textColor="@color/white"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/linearText">

        <TextView
            android:id="@+id/textViewThoiGianDat"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023/27/12 10:00:00"
            android:textColor="@color/white"
            android:textSize="8sp"/>

        <TextView
            android:id="@+id/textViewTinhTrangXacNhan"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã Xác Nhận"
            android:textColor="@color/white"
            android:textSize="10sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/linearImageDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp">
        <ImageView
            android:id="@+id/imageViewDeleteLichDat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_cancel_24"
            app:tint="@color/bgimgedelete"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>