<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    android:background="@drawable/background_item_recycle"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearIDLichDat">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewIDLichDat"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/linearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/linearIDLichDat"
        app:layout_constraintStart_toEndOf="@+id/linearIDLichDat"
        app:layout_constraintBottom_toBottomOf="@+id/linearIDLichDat">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/textViewDiemDauLichDatAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hà Nội"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:layout_marginStart="8dp" />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" --- "
                android:textColor="@color/white"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/textViewDiemCuoiLichDatAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vĩnh Phúc"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/textViewThoiGianXuatPhatLichDatAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17-08-2023 5:00:00"
                android:textStyle="bold|italic"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:layout_marginStart="8sp"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textColor="@color/white"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/textViewThoiGianToiNoiLichDatAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17-08-2023 10:00:00"
                android:textStyle="bold|italic"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhà Xe: "
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textViewTenXeLichDatAdmin"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sao Mai"
                android:textColor="@color/white"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/linearText">

        <TextView
            android:id="@+id/textViewThoiGianDatAdmin"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023/27/12 10:00:00"
            android:textColor="@color/white"
            android:textSize="8sp"/>

        <TextView
            android:id="@+id/textViewTinhTrangXacNhanAdmin"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã Xác Nhận"
            android:textColor="@color/white"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/textViewHoTenNguoiDatLich"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khong tuan 22"
            android:textColor="@color/purple_700"
            android:textSize="8sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:id="@+id/linearImageDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp">
        <ImageView
            android:id="@+id/imageViewDeleteLichDat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_cancel_24"
            app:tint="@color/bgimgedelete"/>

        <ImageView
            android:src="@drawable/baseline_check_24"
            app:tint="#0D30ED"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageViewConfirm"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>